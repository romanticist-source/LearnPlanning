{
  "name": "learn-planning",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:start": "json-server --watch db.json --port 3001 --host 0.0.0.0",
    "db:reset": "cp db.backup.json db.json && echo 'Database reset to initial state'",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm db:start\"",
    "setup": "pnpm install && node scripts/setup-database.js",
    "setup:images": "node scripts/setup-images.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "date-fns": "^2.30.0",
